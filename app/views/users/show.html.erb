<head>
    <meta charset="utf-8" />
</head>

<body class="profile-page">
    <div class="wrapper">
        <div class="page-header page-header-small" filter-color="black">
            <div class="page-header-image" data-parallax="true" style="background-image: url('https://wallpapertag.com/wallpaper/full/3/c/3/688665-cute-kitty-backgrounds-1920x1200-ipad-retina.jpg') ;">
            </div>
            <div class="content-center">
                <h3 class="title">Mon Profil</h3>
                <div class="content">
                    <div class="social-description">
                        <h2><%= @user.first_name %> <%= @user.last_name %></h2>
                        <p><%= @user.email %></p>
                        <%= link_to "Éditer mon profil", edit_user_registration_path, method: :get, :class => "btn btn-primary" %>
                    </div>
                </div>
            </div>
        </div>
        <div class="section">
          <div class="container">
          	  <h2 class="title">Mon historique des commandes</h2>   
                <div class="col">
                        <div class="table-responsive">
                            <table class="table">
                                <thead class="">
                                <tr>
                                    <th class="text-center">N°</th>
                                    <th>Date de commande</th>
                                    <th>Articles</th>
                                    <th class="text-center">Prix</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if @orders != nil %>
                                    <% @orders.each do |order| %>
                                    <tr>
                                        <td class="text-center"><%= order.id %></td>
                                        <td><%= order.created_at %></td>
                                        <td>
                                            <% order.order_items.each do |order_item| %>
                                                <%= order_item.item.title %><br>
                                            <% end %>
                                        </td>
                                      
                                        <td class="text-center">
                                            <% order.order_items.each do |order_item| %>
                                                <%= order_item.item.price %>€<br>
                                            <% end %>
                                        </td> 
                                    </tr>
                                    <% end %> 
                                <% end %>
                            </tbody>
                            </table>
                    </div>
                </div>  
          </div>
        </div>
    </div>
</body>

</html>
