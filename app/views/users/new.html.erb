<div class="page-header section-image">
  <div class="page-header-image" style="background-image:url(https://www.numerama.com/content/uploads/2016/01/chaton-gros-plan.jpg)"></div>
  <div class="content">
    <div class="container">
      <h1>Créer un compte</h1>
      <%= form_tag(sessions_path, method: "post") do %>

        <div class="form-group">
          <label>Votre prénom</label>
          <%= text_field_tag :email, '', class: 'form-control', placeholder: 'Saisissez votre prénom...' %>
        </div>

        <div class="form-group">
          <label>Votre nom</label>
          <%= text_field_tag :email, '', class: 'form-control', placeholder: 'Saisissez votre nom...' %>
        </div>

        <div class="form-group">
          <label>Votre adresse mail</label>
          <%= text_field_tag :email, '', class: 'form-control', placeholder: 'Entrez une adresse mail valide...' %>
        </div>
          
        <div class="form-group">
          <label>Votre mot de passe</label>
          <%= password_field_tag 'password', '', class: 'form-control', placeholder: 'Saisissez un mot de passe...' %>
        </div>

        <div class="form-group">
          <label>Confirmez votre mot de passe</label>
          <%= password_field_tag 'password', '', class: 'form-control', placeholder: 'Validez votre mot de passe...' %>
        </div>

        <div></div>

        <div class="form-group">
          <button id="signup-button" type="submit" class="btn btn-block btn-primary">Connexion</button>
        </div>

        <div class="pull-center">
            <h6>
                Si vous avez déjà un compte, <a href="#pablo" class="link footer-link">cliquez ici</a>
            </h6>
        </div>
    </div>
  </div> 
</div> 

<% end %>