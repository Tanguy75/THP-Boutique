<div class="page-header section-image">
  <div class="page-header-image" style="background-image:url(https://www.numerama.com/content/uploads/2016/01/chaton-gros-plan.jpg)"></div>
  <div class="content">
    <div class="container">
      <h1>Se connecter</h1>
      <%= form_tag(sessions_path, method: "post") do %>
        <div class="form-group">
          <label>Votre adresse mail</label>
          <%= text_field_tag :email, '', class: 'form-control', placeholder: 'Saisissez votre adresse mail...' %>
        </div>
          
        <div class="form-group">
          <label>Votre mot de passe</label>
          <%= password_field_tag 'password', '', class: 'form-control', placeholder: 'Saisissez votre mot de passe...' %>
        </div>

        <div></div>

        <div class="form-group">
          <button id="signup-button" type="submit" class="btn btn-block btn-primary">Connexion</button>
        </div>

        <div class="pull-center">
            <h6>
                Pas encore inscrit ? <a href="/users/new" class="link footer-link">Cliquez ici</a>
            </h6>
        </div>
    </div>
  </div> 
</div> 

<% end %>

