<h1> </h1>

<div class="blogs-3">
<div class="container">
    <div class="row">
      <div class="col-md-10 ml-auto mr-auto">
<h2 class="title">Votre panier</h2>
</div>
</div>
</div>
<%@items.each do |item|%>
  <div class="container">
    <div class="row">
      <div class="col-md-10 ml-auto mr-auto">
        
          <br>
						
							<div class="card card-plain card-blog">
								<div class="row">
									<div class="col-md-4">
										<div class="card-image">
											<img class="img img-raised rounded" src="https://images.pexels.com/photos/171227/pexels-photo-171227.jpeg?auto=compress&cs=tinysrgb&h=750&w=1260">
										</div>
									</div>
									<div class="col-md-8">
										<h3 class="card-title">
											<a href="#pablo"> <%= item.title %></a>
										</h3>
											<p class="card-description">
											<%= item.description %>
											</p>
											<div class="author">
													<p><%= item.price %>€</p>
											</div>
																<div class="row justify-content-end">
				
			</div>
											<div class="row justify-content-end">
				<%= link_to "Supprimer l'article", item_join_cart_item_path(:item_id), method: :delete,  data: { confirm: "Tu es sûr(e) ?" }, class:"btn btn-secondary" %>
			</div>
									</div>
								</div>
							</div>
			</div>
		</div>
	</div>
</div>
<% end %>
<div class="container">
    <div class="row">
      <div class="col-md-10 ml-auto mr-auto">
			<div class="row justify-content-end">
			<p>Total <%= @amount %> €</p>
			</div>
<div class="row justify-content-end">
			<!--	<%= link_to "Passer commande", new_charge_path, method: :get, class:"btn btn-primary" %> -->
				 <% if @amount > 0 %>
								<%= form_tag charges_path do %> 
									<input type="text" name="cart_amount" value="<%= (@amount * 100).round %>" hidden>   

									<script  
										src="https://checkout.stripe.com/checkout.js" class="stripe-button" 
										data-key="<%= ENV['PUBLISHABLE_KEY'] %>"
										data-label="Passer la commande"    
										data-amount="<%= @amount * 100 %>"   
										data-name="E-Kitten"   
										data-description="Votre commande"   
										data-image="https://stripe.com/img/documentation/checkout/marketplace.png"  
										data-locale="auto"  
										data-currency="eur">    
									</script> 


									<% end %>
<% end %>
			</div> 
			</div>
			</div>
			</div>  
             
            